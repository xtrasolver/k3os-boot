#!ipxe
# Boot a persistent K3OS to RAM

# Location of Kernel/Initrd images
set base-url https://github.com/rancher/k3os/releases/download/v0.9.1

kernel ${base-url}/k3os-vmlinuz-amd64  k3os.mode=install k3os.install.iso_url=${base-url}/k3os-amd64.iso k3os.install.config_url=https://gist.githubusercontent.com/xtrasolver/d0c323db36d7e0437f89db638d90ee64/raw/82639401a50ae3f50962848ea4cae2a721b2577f/k3s-lab.config k3os.install.silent=true k3os.install.device=/dev/sda
initrd=${base-url}/k3os-initrd-amd64
